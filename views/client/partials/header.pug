          a(href="/")
            img(src="/images/logo.svg", alt="Logo")

      .col-5
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value = keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
